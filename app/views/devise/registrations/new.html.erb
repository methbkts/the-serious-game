<div class='formfor justify-content-center'>
<%=image_tag('codex_noir.png', size:100)%>
<h2>S'enregistrer</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <!--<%= f.label :email %>-->
    <%= f.email_field :email, placeholder: 'E-mail', autofocus: true %>
  </div>

  <div class="field">
    <!--<%= f.label :mot_de_passe %>-->
    <%= f.password_field :password, placeholder: 'Mot de passe*',  autocomplete: "off" %>
    <% if @minimum_password_length %>
    <em>*<%= @minimum_password_length %> caractÃ¨res minimum</em>
    <% end %>
  </div>

  <div class="field">
    <!--<%= f.label :confirmation_du_mot_de_passe %>-->
    <%= f.password_field :password_confirmation, placeholder: 'Mot de passe*', autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "S'enregistrer" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
