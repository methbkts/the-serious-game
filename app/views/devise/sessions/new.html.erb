<div class='formfor justify-content-center'>
<%=image_tag('codex_noir.png', size:100)%>
<h2>Se connecter</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <!--<%= f.label :email %>-->
    <%= f.email_field :email, placeholder: 'E-mail', autofocus: true %>
  </div>

  <div class="field">
    <!--<%= f.label :mot_de_passe %>-->
    <%= f.password_field :password, placeholder: 'Mot de passe', autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="fieldrem">
      <%= f.check_box :remember_me, style:'margin:0' %>
      <%= f.label :se_souvenir_de_moi, style:'margin:0'%>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Se connecter"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
